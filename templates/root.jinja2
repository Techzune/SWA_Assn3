<!doctype html>
<html lang="en">
<head>
  <!-- meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- styling -->
    {% assets "scss_all" %}
      <link rel=stylesheet type=text/css href="{{ ASSET_URL }}">
    {% endassets %}

  <!-- page title -->
  <title>{% block title %} | Avocado{% endblock %}</title>

</head>
<body>

<!-- navigation bar -->
<nav class="navbar navbar-expand-sm navbar-dark bg-primary">
  <div class="container">

    <!-- nav title -->
    <a class="navbar-brand" href="#">
      Avocado
    </a>

    <!-- mobile nav hamburger -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- collapsible nav menu -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link active" href="#Home">
          Home <span class="sr-only">(current)</span>
        </a>
        <a class="nav-item nav-link" href="#About">
          About
        </a>
        <a class="nav-item nav-link" onclick="document.getElementById('loginID').style.display='block'"  href="#login">
          Log In
        </a>
      </div>
    </div>

  </div>
</nav>

<div id="loginID" class="modal">

  <form class="modal-content animate" action="/action_page.php" method="post">
    <div class="imgcontainer">
      <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
      <img src="img_avatar2.png" alt="Avatar" class="avatar">
    </div>

    <div class="container">
      <label for="uname"><b>Username</b></label>
      <input type="text" placeholder="Enter Username" name="uname" required>

      <label for="psw"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="psw" required>

      <button type="submit">Login</button>
      <label>
        <input type="checkbox" checked="checked" name="remember"> Remember me
      </label>
    </div>

{% block content_before %}
{% endblock %}

<div class="container mt-4">
    {% block content %}
    {% endblock %}
</div>

{% block content_after %}
{% endblock %}

<!-- javascript -->
<script src="{{ url_for('static', filename='bootstrap-4.3.1/js/jquery-3.4.1.slim.min.js') }}"></script>
<script src="{{ url_for('static', filename='bootstrap-4.3.1/js/bootstrap.bundle.js') }}"></script>
{% block extra_js %}
{% endblock %}

</body>
</html>
