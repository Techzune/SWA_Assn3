{% extends "root.jinja2" %}
{% block title %}Cart{% endblock %}

{% block content %}
  <div class="card">
    <div class="card-body">
      {# TITLE #}
      <h2 class="card-title mb-4">Your shopping cart</h2>

      {# LIST EACH ITEM #}
      {% for cart_item in cart.items %}
        <div class="card card-body">
          <div class="row">
            <h5 class="col card-title text-uppercase">{{ cart_item.item.name }}</h5>
            <h4 class="col text-right card-title text-uppercase">{{ cart_item.price_as_str }}</h4>
          </div>
          <div class="row">
            <p class="col">{{ cart_item.item.description }}</p>
            <form class="col-1 m-2 ml-auto">
              <input class="text-right form-control form-control-sm" value="{{ cart_item.qty }}"/>
            </form>
          </div>
        </div>
      {% endfor %}

      {# total #}
      <div class="row mt-4 px-3">
        <h4 class="col">Total:</h4>
        <h4 class="col text-right"><b>{{ cart.total_price }}</b></h4>
      </div>
    </div>


    {# purchase button #}
    <div class="card-footer text-right">
      <a href="/purchase" role="button" class="ml-auto btn btn-info">Checkout</a>
    </div>

  </div>

{% endblock %}

